  font-size: 13px
  font-weight: 700
  background: white

  box-shadow: 1px 2px 5px #999
  border-radius: 5px

  margin-left: auto
  margin-right: auto

  width: 300px

.login-form-header
  background: steelblue
  
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  border-top: 1px solid #3F75A2
  border-right: 1px solid #3F75A2
  border-left: 1px solid #3F75A2
  
  h1
    color: white
    font-size: 30px
    margin: 0
    padding: 10px

.login-form-body 
  padding: 10px

  border-radius: 0px 0px 4px 4px
  border-bottom: 1px solid #D8DEE2
  border-left: 1px solid #D8DEE2
  border-right: 1px solid #D8DEE2
  border-top: 1px soild white

  input
    display: block
    margin-bottom:10px
    width: 273px

.error
