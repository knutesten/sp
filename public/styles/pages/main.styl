//-------------Main-------------//
//A margin div is created between each button, because margin-width in percentage is relative to the width of the element (CSS is so fucking lame).
main-background-color = black

user-select(args)
  -webkit-user-select: args  
  -moz-user-select: args
  -ms-user-select: args
  -o-user-select: args
  user-select: args

.nav
  height:100%
  widht:100%
  background: main-background-color

.nav-item
  color: white
  height: 100px
  background: main-background-color
  display:block
  text-decoration:none
  
  &:visited
    color:white

  &:hover
    background:white
    color: main-background-color

  h1
    user-select(none)
    cursor: default
    padding-top: 20px
    margin:0
    text-align: center
    font-size: 50px
