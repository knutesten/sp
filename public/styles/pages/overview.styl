table-cell-border-color = cornflowerblue
table-border-color = #33CC33
table-background-color = #DCE2DE
table-header-background-color = darkgreen

.overview-table
  background: table-background-color
  border-spacing: 0
  border-collapse: separate

  margin-left: auto
  margin-right: auto

  font-size: 20px

  thead
    margin: 0
    background: table-header-background-color
    text-align: left

    th
      font-size: 25px
      color: white
      padding: 10px
      border: 0

  tbody
    border: 1px solid table-border-color

    .even
      background: #F5FBF7

  td
    border-spacing: 0
    padding: 10px
    
  .number-cell
    text-align: right

.protocol-container
  font-size: 12px
  background:blue

  .protocol-table-header
    font-weight: bold
    background: crimson
    margin:0
    padding:0
  
  .active
    background: green
  .inactive
    background: gray
  

.protocol-table-row
  div
    display: inline-block

  .date
    width: 100px
  .lender
    width: 200px
  .ware
    width: 100px
  .orig-debt
    text-align: right
    width: 80px
  .debt-left
    text-align: right
    width: 70px

