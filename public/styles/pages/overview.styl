table-cell-border-color = cornflowerblue
table-border-color = #33CC33
table-background-color = #DCE2DE
table-header-background-color = darkgreen

.overview-table
  background: table-background-color
  border-spacing: 0
  border-collapse: separate

  margin-left: auto
  margin-right: auto

  font-size: 20px

  thead
    margin: 0
    background: table-header-background-color
    text-align: left

    th
      font-size: 25px
      color: white
      padding: 10px
      border: 0

  tbody
    border: 1px solid table-border-color

    .even
      background: #F5FBF7

  td
    border-spacing: 0
    padding: 10px
    
  .number-cell
    text-align: right
