html
  height: 100% 

body
  padding: 0
  margin: 0
  height: 100%
  font: 3em "Lucida Grande", Helvetica, Arial, sans-serif
  color: white

a
  color: #00B7FF

#navContainer
  overflow: hidden
  margin-left: auto
  margin-right: auto
  width: 300px
  height: 100%

#nav
  cursor: default
  padding: 0
  margin-top: 5px
  margin-bottom: 5px
  background: steelblue
  width: 100%
  height: 125px
  @media (max-height: 500px)
    height: 23%
  &:hover
    background:white
    color: steelblue
