extends layout

block content
  div.header
    h1 Clear your debt

  form(method="post")#clear-form.standard-form
    div.form-body
      label User to pay:
      select(name="lender") autofocus
        - each row in overview
          option(value="#{row.username}", max="#{row.owed}") #{row.name}
      label Amount to pay back:
      input(type="text", name="amount")
      button(onclick="submitClearForm()") Clear debt
